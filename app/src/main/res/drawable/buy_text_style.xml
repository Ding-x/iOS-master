<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:left="1dp"
        android:top="1dp">

        <shape android:shape="rectangle">


            <gradient
                android:angle="270"
                android:endColor="#0F000000"
                android:startColor="#0F000000"/>

            <corners
                android:bottomLeftRadius="7dp"
                android:bottomRightRadius="7dp"
                android:topLeftRadius="7dp"
                android:topRightRadius="7dp"/>
        </shape>
    </item>

    <item
        android:bottom="2dp"
        android:right="2dp"
        >

        <shape android:shape="rectangle">
            <padding
                android:bottom="10dp"
                android:left="10dp"
                android:right="10dp"
                android:top="10dp" />

            <gradient
                android:angle="270"
                android:endColor="#b92646"
                android:startColor="#b92646"/>

            <corners
                android:bottomLeftRadius="7dp"
                android:bottomRightRadius="7dp"
                android:topLeftRadius="7dp"
                android:topRightRadius="7dp"/>


        </shape>
    </item>

</layer-list>